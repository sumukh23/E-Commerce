<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/wallet_highlighted_text_holo_dark"
        android:backgroundTintMode="add">


        <ImageView
            android:id="@+id/image_switcher"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="83dp" />

        <TextView
            android:id="@+id/Productinfo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image_switcher"
            android:layout_marginTop="50dp"
            android:text="TextView"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/Productinfo_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Productinfo_name"
            android:layout_below="@+id/Productinfo_name"
            android:layout_marginTop="20dp"
            android:text="TextView"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Productinfo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Productinfo_name"
            android:layout_below="@+id/Productinfo_price"
            android:layout_marginTop="20dp"
            android:text="TextView"
            android:textSize="15sp" />

        <Button
            android:id="@+id/click_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/image_switcher"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="75dp"
            android:text="Next" />

        <Button
            android:id="@+id/click_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/click_right"
            android:text="Previous" />

        <Button
            android:id="@+id/Buynow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Productinfo_description"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Buy Now" />

        <Button
            android:id="@+id/Addtocart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/click_right"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="Add to Cart" />


    </RelativeLayout>

</ScrollView>